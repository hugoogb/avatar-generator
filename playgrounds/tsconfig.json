{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@avatar-core/*": ["../src/lib/core/*"],
      "@avatar-react/*": ["../src/packages/react/*"],
      "@avatar-style-initials/*": ["../src/lib/styles/initials/*"],
      "@avatar-style-geometric/*": ["../src/lib/styles/geometric/*"],
      "@avatar-style-pixels/*": ["../src/lib/styles/pixels/*"],
      "@avatar-style-rings/*": ["../src/lib/styles/rings/*"],
      "@avatar-style-faces/*": ["../src/lib/styles/faces/*"],
      "@avatar-style-illustrated/*": ["../src/lib/styles/illustrated/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "vite.config.ts"]
}
