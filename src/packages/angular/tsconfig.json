{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "composite": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declarationDir": "./dist/types",
    "outDir": "./dist",
    "rootDir": "src",
    "baseUrl": "../..",
    "paths": {
      "@avatar-generator/core": ["./lib/core/src"]
    }
  },
  "include": ["src"],
  "references": [
    { "path": "../../lib/core" }
  ]
}
